<Page x:Class="Tests.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tests"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TestQuest" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="24" VerticalAlignment="Center" Height="135" Width="300"/>
        <Button x:Name="TestFirs" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="40" Width="300" Click="TestFirs_Click" />
        <Button x:Name="TestSeco" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="40" Width="300" Click="TestSeco_Click" />
        <Button x:Name="TestThir" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="40" Width="300" Click="TestThir_Click" />

    </Grid>
</Page>
