<Window x:Class="Tests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tests"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.14*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Editor_Button"  Grid.Column="1" Content="Редактирование" Click="Editor_Button_Click" />
        <Button x:Name="Test_Button" Grid.Column="2" Content="Прохождение" Click="Test_Button_Click" />
        <Button x:Name="Exit_Button" Content="Выход" Click="Exit_Button_Click" />
        <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
